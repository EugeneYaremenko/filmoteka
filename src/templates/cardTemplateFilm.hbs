<div class="main__img-wrapper">
    <img id="js-mainImg" class="main__img"
        src="https://image.tmdb.org/t/p/w500{{poster_path}}"
        data-source="https://image.tmdb.org/t/p/w500{{backdrop_path}}"
        alt="{{original_title}}" />
</div>
<div class="main__description-wrapper">
    <h2 class="main__description-title" id="js-descriptionTitle">{{title}}</h2>
    <table class="main__description-table">
        <tbody class="main__description-table--tbody">
            <tr class="main__description-table--tr">
                <td class="main__description-table--td">vote/votes</td>
                <td class="main__description-table--td js-tableVote">{{vote_average}} / {{vote_count}}</td>
            </tr>
            <tr class="main__description-table--tr">
                <td class="main__description-table--td">popularity</td>
                <td class="main__description-table--td js-tablePopularity">{{popularity}}</td>
            </tr>
            <tr class="main__description-table--tr">
                <td class="main__description-table--td">original title</td>
                <td class="main__description-table--td js-tableOriginalTitle">{{original_title}}</td>
            </tr>
            <tr class="main__description-table--tr">
                <td class="main__description-table--td">genre</td>
                <td id="js-table-genre" class="main__description-table--td js-tableGenre"></td>
            </tr>
        </tbody>
    </table>
    <h3 class="main__description-about">About</h3>
    <p id="js-descriptionAboutInfo" class="main__description-about--info">{{overview}}</p>
</div>

